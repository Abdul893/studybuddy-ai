{
  "name": "studybuddy-ai-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "audit": "npm audit && echo 'Security audit completed'",
    "audit:fix": "npm audit fix",
    "security-check": "node -e \"console.log('Checking for security vulnerabilities...'); require('child_process').exec('npm audit', (err, stdout) => { console.log(stdout); if (err) process.exit(1); })\""
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "firebase-admin": "^12.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "validator": "^13.15.26"
  }
}
